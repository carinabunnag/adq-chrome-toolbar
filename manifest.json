{
  "name": "AdQ Chrome Toolbar",
  "version": "1.0",
  "manifest_version": 2,
  "description": "This extension checks whether or not a webpage is using AdQ and updates the icon accordingly.",
  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["addScript.js"]
    }
  ],

  "permissions": ["tabs", "<all_urls>"],

  "web_accessible_resources": ["addScript.js"]
}
